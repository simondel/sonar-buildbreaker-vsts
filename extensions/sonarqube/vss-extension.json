{
    "manifestVersion": 1,
    "id": "sonar-buildbreaker",
    "name": "SonarQube build breaker",
    "version": "7.0.2",
    "publisher": "SimondeLang",
    "public" : true,
    "repository": {
        "type": "git",
        "uri": "https://github.com/simondel/sonar-buildbreaker-vsts"
    },
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Task for breaking your build when it fails the SonarQube quality gate.",
    "categories": [
        "Build and release"
    ],
    "content": {
        "details": {
            "path": "extensions/sonarqube/README.md"
        },
        "license": {
            "path": "extensions/sonarqube/LICENSE"
        }
    },
    "tags": [
        "build",
        "sonar",
        "sonarqube", "sq"
    ],
    "links": {
        "repository": {
            "uri": "https://github.com/simondel/sonar-buildbreaker-vsts"
        },
        "issues": {
            "uri": "https://github.com/simondel/sonar-buildbreaker-vsts/issues"
        }
    },
    "branding": {
        "color": "rgb(248,153,56)",
        "theme": "light"
    },
    "icons": {
        "default": "images/extension-icon.png"        
    },
    "files": [
        {
            "path": "tasks/buildbreaker"
        }
    ],
    "contributions": [
        {
            "id": "sonar-buildbreaker",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "extensions/sonarqube/tasks/buildbreaker"
            }
        }
    ]
}